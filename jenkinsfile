pipeline {

    agent {
        label ''
    }

    triggers {
        githubPush()
    }

    stages {

        stage('Clean') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/s0178464/sample-spring-boot'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        // stage('Deploy') {
        //    steps {
        //         sh 'npm install -g forever'
        //         sh 'forever start src/index.js'
        //    }
        // }
    }
}

//this is to test the automatic trigger by a push